<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/semiBlack"
    app:cardCornerRadius="25dp"
    android:id="@+id/workForceBg"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="10dp"
                android:id="@+id/sessionTitle"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:fontFamily="serif"
                android:text="@string/title"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="10dp"
                android:id="@+id/sessionDescription"
                android:gravity="center"
                android:padding="5dp"
                android:fontFamily="sans-serif"
                android:text="@string/description"
                android:textColor="@color/teal_700"
                android:textStyle="bold"
                tools:ignore="NestedWeights" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:id="@+id/lastModified"
                android:fontFamily="serif-monospace"
                android:gravity="end"
                android:padding="5dp"
                android:text="@string/time"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                tools:ignore="NestedWeights"
                android:drawablePadding="10dp"
                app:drawableEndCompat="@drawable/black_dot"
                app:drawableStartCompat="@drawable/black_dot" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:id="@+id/postedAtTimeline"
                android:fontFamily="serif-monospace"
                android:gravity="end"
                android:padding="5dp"
                android:text="@string/time"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                tools:ignore="NestedWeights"
                android:drawablePadding="10dp"
                app:drawableEndCompat="@drawable/black_dot"
                app:drawableStartCompat="@drawable/black_dot" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>